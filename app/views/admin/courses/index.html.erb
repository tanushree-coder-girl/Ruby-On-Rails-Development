<div class="col-lg-10">
  
    <!-- Search form for ransack gem -->
    <%= search_form_for @q, url: :admin_courses do |f| %>
    <div class="row">
      <div class="form-group col-sm-4">
          <%= f.label :name %>
              <%= f.search_field :name_cont, class:'form-control' %>
      </div>
      <div class="form-group col col-sm-4">
          <%= f.label :description %>
              <%= f.search_field :description_cont, class:'form-control' %>
      </div>
    </div>
    <div>
      <%= f.submit class:'btn btn-primary btn-lg' %>
    </div>
    <% end %>

<p id="notice"><%= notice %></p>

<h1>Courses</h1>
<%= link_to 'New Course', new_admin_course_path, class: 'btn btn-primary btn-lg' %>


<table class="table table-bordered mt-3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Show', admin_course_path(course) %></td>
        <td><%= link_to 'Edit', edit_admin_course_path(course) %></td>
        <td><%= link_to 'Destroy', admin_course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_nav(@pagy).html_safe%>

</div>
