<div class="col-lg-10">
<%= form_with(model: [:admin, course]) do |form| %>
 
  <!-- partial for error msg -->
  <%= render "admin/shared/errors", model: course %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.rich_text_area :content, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

<%= link_to 'Back', admin_courses_path %>

</div>

