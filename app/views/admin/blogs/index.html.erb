<div class="col-lg-10">
    <!-- Search form for ransack gem -->
    <%= search_form_for @q, url: :admin_blogs do |f| %>
    <div class="row">
      <div class="form-group col-sm-4">
          <%= f.label :title %>
              <%= f.search_field :title_cont, class:'form-control' %>
      </div>
      <div class="form-group col col-sm-4">
          <%= f.label :content %>
              <%= f.search_field :content_cont, class:'form-control' %>
      </div>
    </div>
    <div>
      <%= f.submit class:'btn btn-primary btn-lg' %>
    </div>
    <% end %>

    <h1> Listing Blogs </h1>

    <!-- notice  -->
    <p>
        <%= notice %>
    </p>

    <%= link_to 'Add New Blog' , new_admin_blog_path, class: 'btn btn-primary btn-lg' %>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th> Title </th>
                    <th> Content </th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>
            <tbody>
                <% @blogs.each do |blog| %>
                    <tr>
                        <td>
                            <%= blog.title %>
                        </td>
                        <td>
                            <%= blog.content %>
                        </td>
                        <td>
                            <%= link_to 'View' , admin_blog_path(blog) %>
                        </td>
                        <td>
                            <%= link_to 'Edit' , edit_admin_blog_path(blog) %>
                        </td>
                        <td>
                            <%= link_to 'Delete' , admin_blog_path(blog), method: :delete, data:
                                {confirm: "Are You sure" } %>
                        </td>
                    </tr>
                    <% end %>
            </tbody>
        </table>

        <%= will_paginate @blogs, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

</div>