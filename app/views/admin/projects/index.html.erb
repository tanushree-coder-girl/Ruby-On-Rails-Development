<div class="col-lg-10">
    <!-- Search form for ransack gem -->
    <%= search_form_for @q, url: :admin_projects do |f| %>
    <div class="row">
      <div class="form-group col-sm-4">
          <%= f.label :name %>
              <%= f.search_field :name_cont, class:'form-control' %>
      </div>
      <div class="form-group col col-sm-4">
          <%= f.label :description %>
              <%= f.search_field :description_cont, class:'form-control' %>
      </div>
    </div>
    <div>
      <%= f.submit class:'btn btn-primary btn-lg' %>
    </div>
    <% end %>


<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<%= link_to 'New Project', new_admin_project_path, class: 'btn btn-primary btn-lg' %>

<table class="table table-bordered mt-3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', admin_project_path(project) %></td>
        <td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
        <td><%= link_to 'Destroy', admin_project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @blogs, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

</div>
