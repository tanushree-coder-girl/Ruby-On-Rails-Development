<div class="col-lg-10">

    <!-- Search form for ransack gem -->
    <%= search_form_for @q, url: :admin_students do |f| %>
        <div class="row">

            <div class="form-group col-sm-4">
                <%= f.label :first_name %>
                    <%= f.search_field :first_name_cont, class:'form-control' %>
            </div>
            <div class="form-group col col-sm-4">
                <%= f.label :last_name %>
                    <%= f.search_field :last_name_cont, class:'form-control' %>
            </div>
            <div class="form-group col col-sm-4">
                <%= f.label :email %>
                    <%= f.search_field :email_cont, class:'form-control' %>
            </div>
            <div class="form-group col col-sm-4">
                <%= f.label :permanent_address %>
                    <%= f.search_field :permanent_address_cont, class:'form-control' %>
            </div>
            <div class="form-group col col-sm-4">
                <%= f.label :local_address %>
                    <%= f.search_field :local_address_cont, class:'form-control' %>
            </div>
            <div class="form-group col col-sm-4">
                <%= f.label :date_of_birth %>
                    <%= f.date_field :date_of_birth_lt, class:'form-control' %>
            </div>
        </div>
        <div>
            <%= f.submit class:'btn btn-primary btn-lg' %>
        </div>

        <% end %>

            <!-- notice  -->
            <p>
                <%= notice %>
            </p>

            <h1> Listing Students </h1>
            <%= link_to 'Add New Student' , new_admin_student_path, class:'btn btn-primary btn-lg' %>

                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>Full Name with email</th>
                            <th colspan="3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @students.each do |student| %>
                            <tr>
                                <td>
                                    <%= student.name_with_email %>
                                </td>
                                <td>
                                    <%= link_to 'View' , admin_student_path(student) %>
                                </td>
                                <td>
                                    <%= link_to 'Edit' , edit_admin_student_path(student) %>
                                </td>
                                <td>
                                    <%= link_to 'Delete' , admin_student_path(student), method: :delete, data:
                                        {confirm: "Are You sure" } %>
                                </td>
                            </tr>
                            <% end %>
                    </tbody>
                </table>

                <%= paginate @students %>
</div>